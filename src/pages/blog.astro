---
// Component Imports
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPostPreview from '../components/BlogPostPreview.astro';

interface MarkdownFrontmatter {
  publishDate: number;
}

let title = "Any Road's blog";
let description = 'Random thoughts of full-stack developer.';
let permalink = 'https://anyroad.dev/blog';

// Data Fetching: List all Markdown posts in the repo.
let allPosts = await Astro.fetchContent('./posts/*.md');
allPosts = allPosts.sort(
  (a, b) => new Date(b.publishDate).valueOf() - new Date(a.publishDate).valueOf(),
);
---

<BaseLayout {title} {description} {permalink} image={''}>
  <section class="intro">
    <h1 class="latest"><img src="/icons/road.svg" class="inline" />{title}</h1>
    <p>{description}</p>
  </section>
  <section aria-label="Blog post list">
    {allPosts.map((p) => <BlogPostPreview post={p} />)}
  </section>
</BaseLayout>

<style>
  header {
    width: 100%;
    height: 100%;
    background-color: var(--theme-bg-offset);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .content {
    margin-top: 4rem;
    margin-bottom: 8rem;
  }

  .content :global(main > * + *) {
    margin-top: 1rem;
  }

  .intro {
    padding-bottom: 4rem;
    margin-bottom: 2rem;
    border-bottom: 4px solid var(--theme-divider);
    padding-top: 2rem;
  }

  .intro > * {
    margin: 0;
  }

  .latest {
    font-size: 2.5rem;
    font-weight: 700;
  }
</style>
