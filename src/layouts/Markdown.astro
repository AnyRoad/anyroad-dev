---
import BaseLayout from './BaseLayout.astro';

const { title, heroImage, permalink, description } = Astro.props.content;
---

<BaseLayout
  seo={{
    title,
    description,
    openGraph: {
      basic: {
        title: title,
        type: 'website',
        image: heroImage || '',
        url: permalink
      }
    }
  }}
>
  <div class="wrapper">
    <h1>{title}</h1>
    <slot />
  </div>
</BaseLayout>
